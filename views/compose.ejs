<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
      <label>Title</label>
      <input type="text" class="form-control" name="postTitle" placeholder="Enter Title">
    </div>
    <div class="form-group">
      <label>Post</label>
      <textarea name="postBody" rows="10" class="form-control" cols="30" placeholder="enter your text here"></textarea>
    </div>
    <button type="submit" class="btn btn-primary" name="button">Publish</button>
  </form>




